{
	
	"compilerOptions": {
	
		"baseUrl": ".",
		"moduleResolution": "node",
		"target": "esnext",
		"module": "esnext",
		"useDefineForClassFields": true,
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"paths": {
			"@/*": ["src/*"]
		},
		"types": [
			/** https://juejin.cn/post/7262322846252613693 */
			"element-plus/global",
			"vite/client"
		]

		// "allowJs": true,但是报错
		 /*
		 [{
	"resource": "/f:/f1-harryCong/zero-one-08mes/mes-frontend/tsconfig.json",
	"owner": "typescript",
	"severity": 8,
	"message": "无法写入文件“f:/zero-one-08mes/mes-frontend/src/router/index.js”，因为它会覆盖输入文件。",
	"source": "ts",
	"startLineNumber": 1,
	"startColumn": 1,
	"endLineNumber": 1,
	"endColumn": 2
}]**/

	},
	/** https://www.typescriptlang.org/tsconfig#include */
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		// 测试文件集
		"tests/**/*.ts",
		// 导入自动生成的类型声明文件
		"auto-imports.d.ts",
		"components.d.ts"
	],
	"exclude": ["node_modules", "dist"]
}

