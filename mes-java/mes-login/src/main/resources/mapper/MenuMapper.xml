    <select id="selectByRoleName" resultType="com.zeroone.star.login.entity.MenuDO">
      SELECT menu_id,menu_name,path,icon,parent_id
      FROM ktgmes.sys_menu
      WHERE path IS NOT NULL AND menu_id IN
                                 (SELECT menu_id
                                  FROM sys_role_menu
                                  WHERE role_id=
                                        (SELECT role_id
                                         FROM sys_role
                                         WHERE role_name=#{roleName}))
      ORDER BY order_num
    </select>

